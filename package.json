{
  "name": "pretty-nums",
  "description": "Convert numbers to a human readable string: 1234 â†’ 1.2K",
  "version": "0.1.1",
  "repository": "rocktimsaikia/pretty-nums",
  "author": {
    "name": "Rocktim Saikia",
    "email": "hello@rocktimsaikia.dev",
    "url": "https://rocktimsaikia.dev"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "test": "ava"
  },
  "devDependencies": {
    "@types/node": "^18.15.10",
    "ava": "^5.2.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  },
  "tsup": {
    "entry": [
      "index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "clean": true
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "*.test.ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "keywords": [
    "pretty",
    "numbers",
    "human",
    "readable",
    "string",
    "convert",
    "format",
    "number formatting",
    "pretty formatting",
    "formatting",
    "formatting numbers",
    "formatting numbers to string",
    "formatting numbers to human readable string",
    "formatting numbers to human readable string in javascript",
    "formatting numbers to human readable string in nodejs"
  ]
}
